        <input id="AssetId" name="AssetId" hidden />

        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped" id="datatable" cellspacing="10" width="100%">
              <thead class="text-primary">
              <th class="text-center">
                #
              </th>
              <th>
                Device Name
              </th>
              <th>
                Brand
              </th>
              <th>
                Model
              </th>
              <th>
                Serial No.
              </th>
              <th>
                Employee Name.
              </th>
              <th>
                Action
              </th>

              </thead>


              <tbody>

                @{
                  int i = 1;

                  @if (Model.Count() < 1)
                  {
                  <td></td>
                  <td></td>
                  <td></td>
                  <td>No Data to Display</td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td></td>

                }


                  foreach (var item in Model)
                  {

                    <tr>
                      <td class="text-center">
                        @i
                      </td>

                      <td>
                        @item.DeviceName
                      </td>
                      <td>
                        @item.Brand
                      </td>
                      <td>
                        @item.Model
                      </td>
                      <td>
                        @item.SerialNumber
                      </td>
                      <td>
                        @item.EmployeeName
                      </td>
                      <td>
                        <a href="#" class="btn btn-round btn-warning btn-icon btn-sm" id="Editbtn" data-toggle="modal" data-target="#noticeModal1" EditAssetId="@item.Id" select-DeviceName="@item.DeviceName" Selected-Brand="@item.Brand" Selected-Model="@item.Model" Selected-SerialNo="@item.SerialNumber"><i class="far fa-calendar-alt"></i></a>
                        <a href="#" class="btn btn-round btn-danger btn-icon btn-sm remove" title="Click to Delete"><i class="fas fa-times"></i></a>

                      </td>
                    </tr>

                    { i = i + 1; }
                  }
                }

                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>

