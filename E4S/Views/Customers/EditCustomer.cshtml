@model E4S.Models.AccountInventory.Customer

@{
  ViewData["Title"] = "Edit Customer";
  Layout = "~/Views/Shared/_LayoutAccountInventory.cshtml";
}

<style>
  .body-card {
    margin-left: 2%;
    margin-right: 2%;
    margin-top: 1%;
    margin-bottom: 2%;
  }

  .table-font {
    font-weight: 500;
  }


  .labeltext {
    padding-left: 20px;
    padding-right: 20px;
    color: #000 !important;
    text-align: right;
  }
</style>

<div class="content">
  @Html.Partial("~/Views/Manage/_StatusMessage.cshtml", ViewData["StatusMessage"])

  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header body-card">
          <h5>Edit Customer</h5>

        </div>

        <div class="card-body body-card">
          <form class="form" asp-action="EditCustomer">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OrganisationId" />

            <div class="form-inline">
              <label class="labeltext col-sm-3">Customer Name*</label>
              <input asp-for="CustomerName" type="text" class="form-control col-sm-4" placeholder="John Doe" required />
            </div>
            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3" style="text-align:left;">Email</label>
              <input asp-for="Email" type="text" class="form-control col-sm-4" placeholder="Johndoe@gmail.com" />

            </div>

            <br />
            <div class="form-inline">
              <label class="labeltext col-sm-3">Phone Number</label>
              <input asp-for="Phone" type="tel" class="form-control col-sm-4" placeholder="+234958437538" />
            </div>

            <br />
            <div class="form-inline">
              <label class="labeltext col-sm-3">Country</label>
              <select asp-for="Country" class="form-control col-sm-4">
                <option value="Nigeria">Nigeria</option>
              </select>
            </div>
            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">State</label>
              <select asp-for="State" class="form-control col-md-4">
                <option value="Lagos">Lagos</option>
              </select>
            </div>

            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">City</label>
              <select asp-for="City" class="form-control col-sm-4">
                <option value="Oshodi">Oshodi</option>
              </select>
            </div>
            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">Bank Name</label>
              <input asp-for="BankName" type="text" class="form-control col-sm-4" placeholder="First Bank" />
            </div>

            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">Account Name</label>
              <input asp-for="AccountName" type="text" class="form-control col-sm-4" placeholder="Lamboroki Ojulari" />
            </div>
            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">Account Number</label>
              <input asp-for="AccountNumber" type="tel" class="form-control col-sm-4" placeholder="3059737374" />
            </div>
            <br />

            <br />

            <div class="form-inline">
              <label class="labeltext col-sm-3">Website</label>
              <input asp-for="Website" type="text" class="form-control col-sm-4" placeholder="www.wragbysolutions.com" />
            </div>

            <br />


            <hr />
            <div class="form-inline">
              <label class="labeltext col-sm-3"></label>
              <input type="submit" value="Save Customer" class="btn btn-info content-center" />

              @*<input type="submit" value="Cancel" class="btn btn-danger content-center" />*@
            </div>


          </form>
        </div>

      </div>
    </div>
  </div>
</div>

