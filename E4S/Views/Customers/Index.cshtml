
@{
    ViewData["Title"] = " Customer ";
    Layout = "~/Views/Shared/_LayoutAccountInventory.cshtml";
}

<style>
    .body-card {
        margin-left: 2%;
        margin-right: 2%;
        margin-top: 1%;
        margin-bottom: 2%;
    }

    .table-font {
        font-weight: 500;
    }
</style>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header body-card">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Export Data
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Copy</a>
                            <a class="dropdown-item" href="#">CSV</a>
                            <a class="dropdown-item" href="#">Excel</a>
                            <a class="dropdown-item" href="#">PDF</a>
                            <a class="dropdown-item" href="#">Print</a>

                        </div>
                    </div>

                    <a asp-action="AddCustomer" asp-controller="Customers" class="btn btn-info btn-md pull-right btn-responsive">

                        <span class="btn-label">
                            <i class="now-ui-icons travel_info"></i>
                        </span>

                        Add New Customer

                    </a>

                    <h4 class="card-title">Customers</h4>
                </div>
                <div class="card-body body-card">

                    <div class="table-responsive">
                        <table id="datatable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th><strong>Customer Name</strong></th>
                                    <th scope="col"><strong>Email</strong></th>
                                    <th scope="col"><strong>Phone</strong></th>

                                    <th scope="col"><strong>City</strong></th>
                                    <th scope="col" class="disabled-sorting"><strong>Actions</strong></th>
                                </tr>
                            </thead>
                            <tbody class="fontweight">

                                <tr>
                                    <td>1</td>
                                    <td>Olivia Liang</td>
                                    <td>Support Engineer</td>

                                    <td>64</td>
                                    <td class="">
                                        <a href="#" class="btn btn-warning btn-icon btn-sm edit"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn btn-danger btn-icon btn-sm remove"><i class="fas fa-times"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>


