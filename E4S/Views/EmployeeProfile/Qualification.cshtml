                        <!-- work Experience End-->
                        <div class="card-body">
                          <!-- Skills-->
                          <div class="card-header">
                            <div class="justify-content-end align-items-center ">
                              <a class="btn btn-fill btn-info" data-toggle="modal" data-target="#noticeModal4">Add Skills</a>
                            </div>
                          </div>

                          <!-- notice modal -->
                          <div class="modal fade" id="noticeModal4" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-notice">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                    <i class="now-ui-icons ui-1_simple-remove"></i>
                                  </button>
                                  <h5 class="modal-title" id="myModalLabel">Enter New Skill</h5>
                                </div>
                                <div class="modal-body">
                                  <div class="instruction">
                                    <form enctype="multipart/form-data" asp-action="skillsUpload" method="post">
                                      <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Skill</label>
                                            <input type="text" class="form-control" placeholder="Skill" id="qSkill" name="qSkill" required>
                                          </div>
                                        </div>
                                      </div>

                                      <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Description</label>
                                            <input type="text" class="form-control" placeholder="Description" id="qDescription" name="qDescription" required>
                                          </div>
                                        </div>
                                      </div>

                                      <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group">
                                            <label>Year of Experience</label>
                                            <input type="number" class="form-control" placeholder="Year of Experience" id="qYearOfExperience" name="qYearOfExperience" required>
                                          </div>
                                        </div>
                                      </div>

                                      <hr />
                                      <div class="card-footer ">
                                        <button type="submit" class="btn btn-fill btn-primary btn-round">Submit</button>
                                        <button type="button" class="btn btn-info btn-round" data-dismiss="modal">Close</button>
                                      </div>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                          <!-- end notice modal -->
                        </div>


                        <div class="card-body">
                          <br />
                          <table id="datatable" class="table table-striped " cellspacing="10" width="100%">
                            <thead>
                              <tr>
                                <th>Skill</th>
                                <th>Description</th>
                                <th>Years of Experience</th>
                                <th class="disabled-sorting text-right">Actions</th>
                              </tr>
                            </thead>

                            <tbody>
                              @foreach (var item in Model.Skills)
                              {
                                <tr>
                                  <td>@item.SkillName</td>
                                  <td>@item.Description</td>
                                  <td>@item.YearsOfExperience</td>
                                  <td class="text-right">
                                    <a href="#" class="btn btn-round btn-warning btn-icon btn-sm edit" title="Click to Edit"><i class="far fa-calendar-alt"></i></a>
                                    <a href="#" class="btn btn-round btn-danger btn-icon btn-sm remove" title="Click to Delete"><i class="fas fa-times"></i></a>
                                  </td>
                                </tr>

                              }


                            </tbody>
                          </table>
                        </div>
                        <!--End Skills-->
                        <hr />

                        <div class="card-header">
                          <div class="justify-content-end align-items-center ">
                            <a class="btn btn-fill btn-info" data-toggle="modal" data-target="#noticeModal5">Add Work Experience</a>
                          </div>
                        </div>

                        <!-- notice modal -->
                        <div class="modal fade" id="noticeModal5" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                          <div class="modal-dialog modal-notice">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                  <i class="now-ui-icons ui-1_simple-remove"></i>
                                </button>
                                <h5 class="modal-title" id="myModalLabel">Enter Work Experience</h5>
                              </div>
                              <div class="modal-body">
                                <div class="instruction">

                                  <form enctype="multipart/form-data" asp-action="workUpload" method="post">
                                    <div class="row">
                                      <div class="col-md-12">
                                        <div class="form-group">
                                          <label>Company</label>
                                          <input type="text" class="form-control" placeholder="Company" id="WOrganisation" name="WOrganisation" required>
                                        </div>
                                      </div>
                                    </div>

                                    <div class="row">
                                      <div class="col-md-12">
                                        <div class="form-group">
                                          <label>Job Title</label>
                                          <input type="text" class="form-control" placeholder="Job Title" id="WJobTitle" name="WJobTitle" required>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <div class="form-group">
                                          <label>From</label>
                                          <input type="date" class="form-control" placeholder="Job Title" id="WStartDate" name="WStartDate" required>

                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <div class="form-group">
                                          <label>To</label>
                                          <input type="date" class="form-control" placeholder="Job Title" id="WEndDate" name="WEndDate" required>
                                        </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                        <div class="form-group">
                                          <label>Comment</label>
                                          <input type="text" class="form-control" placeholder="Comment" id="WComment" name="WComment" required>
                                        </div>
                                      </div>
                                    </div>

                                    <hr />
                                    <div class="card-footer ">
                                      <button type="submit" class="btn btn-fill btn-primary btn-round">Submit</button>
                                      <button type="button" class="btn btn-info btn-round" data-dismiss="modal">Close</button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- end notice modal -->

                        <div class="card-body">
                          <br />
                          <table id="datatable" class="table table-striped " cellspacing="10" width="100%">
                            <thead>
                              <tr>
                                <th>Company</th>
                                <th>Job Title</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Comment</th>
                                <th class="disabled-sorting text-right">Actions</th>
                              </tr>
                            </thead>

                            <tbody>

                              @foreach (var item in Model.WorkExperiences)
                              {
                                <tr>
                                  <td>@item.Organisation</td>
                                  <td>@item.JobTitle</td>
                                  <td>@item.StartDate.ToString("dd, MMM yyyy")</td>
                                  <td>@item.EndDate.ToString("dd, MMM yyyy")</td>
                                  <td>@item.Comment</td>
                                  <td class="text-right">
                                    <a href="#" class="btn btn-round btn-warning btn-icon btn-sm edit" title="Click to Edit"><i class="far fa-calendar-alt"></i></a>
                                    <a href="#" class="btn btn-round btn-danger btn-icon btn-sm remove" title="Click to Delete"><i class="fas fa-times"></i></a>
                                  </td>
                                </tr>

                              }


                            </tbody>
                          </table>
                        </div>



                      </div>
                        <!-- the End of Emergency Contact Tabs-->

                      </div>
                </div>
            </div>
        </div>
    </div>
</div>


