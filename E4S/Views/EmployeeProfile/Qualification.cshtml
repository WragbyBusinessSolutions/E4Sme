                                <th>Degree</th>
                                <th>Grade</th>
                                <th>Year </th>
                                <th class="disabled-sorting text-right">Actions</th>
                              </tr>
                            </thead>

                            <tbody>
                              @foreach (var item in Model.InstitutionQualifications)
                              {
                                <tr>
                                  <td>@item.Institution</td>
                                  <td>@item.CourseOfStudy</td>
                                  <td>@item.Degree</td>
                                  <td>@item.Grade</td>
                                  <td>@item.YearCompleted</td>
                                  <td class="text-right">
                                    <a href="~/@item.ImageURL" target="_blank" class="btn btn-round btn-warning btn-icon btn-sm edit" title="Click to Delete"><i class="far fa-calendar-alt"></i></a>
