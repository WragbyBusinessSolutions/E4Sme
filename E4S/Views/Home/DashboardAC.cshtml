<script src="https://www.amcharts.com/lib/4/core.js"></script>
<script src="https://www.amcharts.com/lib/4/charts.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>

<!-- Chart code -->
<script>
am4core.ready(function() {

// Themes begin
am4core.useTheme(am4themes_animated);
// Themes end

// Create chart instance
var chart = am4core.create("chartdivs", am4charts.XYChart);

// Add percent sign to all numbers
chart.numberFormatter.numberFormat = "200'₦'";

// Add data
chart.data = [{
    "month": "Aug 18",
    "year2004": 3.5,
    "year2005": 4.2
}, {
    "month": "Sept 18",
    "year2004": 1.7,
    "year2005": 3.1
}, {
    "month": "Oct 18",
    "year2004": 2.8,
    "year2005": 2.9
}, {
    "month": "Novv 18",
    "year2004": 2.6,
    "year2005": 2.3
}, {
    "month": "Dec 18",
    "year2004": 1.4,
    "year2005": 2.1
}, {
    "month": "Jan 19",
    "year2004": 2.6,
    "year2005": 4.9
}];

// Create axes
var categoryAxis = chart.xAxes.push(new am4charts.CategoryAxis());
categoryAxis.dataFields.category = "month";
categoryAxis.renderer.grid.template.location = 0;
categoryAxis.renderer.minGridDistance = 30;

var valueAxis = chart.yAxes.push(new am4charts.ValueAxis());
valueAxis.title.text = "Profit and Loss Report";
valueAxis.title.fontWeight = 800;

// Create series
var series = chart.series.push(new am4charts.ColumnSeries());
series.dataFields.valueY = "year2004";
series.dataFields.categoryX = "month";
series.clustered = false;
series.tooltipText = "Loss in  {categoryX} (2004): [bold]{valueY}[/]";

var series2 = chart.series.push(new am4charts.ColumnSeries());
series2.dataFields.valueY = "year2005";
series2.dataFields.categoryX = "month";
series2.clustered = false;
series2.columns.template.width = am4core.percent(50);
series2.tooltipText = "Profit in {categoryX} (2005): [bold]{valueY}[/]";

chart.cursor = new am4charts.XYCursor();
chart.cursor.lineX.disabled = true;
chart.cursor.lineY.disabled = true;

}); // end am4core.ready()
</script>
