@model  IEnumerable<E4S.Models.HumanResource.Leave>

@{
    ViewData["Title"] = "Leaves";
    Layout = "~/Views/Shared/_LayoutHumanResouces.cshtml";
}

<div class="content">


    <div class="row">
        <!-- Column -->

        <div class="container-fluid">

            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
