                                <!-- notice modal -->
                                <div class="modal fade" id="noticeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-notice">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                    <i class="now-ui-icons ui-1_simple-remove"></i>
                                                </button>
                                                <h5 class="modal-title" id="myModalLabel">Enter New Job Category</h5>
                                            </div>
                                            <div class="modal-body">
                                                <div class="instruction">
                                                    <form>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Employee Name</label>
                                                                    <input type="text" class="form-control" placeholder="Job Category" id="EmployeeName" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Leave</label>
                                                                    <input type="text" class="form-control" placeholder="Leave" id="Leave" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Description</label>
                                                                    <input type="text" class="form-control" placeholder="Description" id="Description">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Start Date</label>
                                                                    <input type="date" class="form-control" placeholder="Leave" id="JobCategory" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>End Date</label>
                                                                    <input type="date" class="form-control" placeholder="Leave" id="JobCategory" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label>Approved Date</label>
                                                                    <input type="date" class="form-control" placeholder="Leave" id="JobCategory" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <hr />
                                                        <div class="card-footer ">
                                                            <button type="submit" class="btn btn-fill btn-primary btn-round" id="SubmitNewJobCategory">Submit</button>
                                                            <button type="submit" class="btn btn-fill btn-primary btn-round" id="SubmitNewJobCategory">Decline</button>
                                                            @*<button type="button" class="btn btn-info btn-round" data-dismiss="modal">Close</button>*@
                                                        </div>
                                                    </form>
                                                </div>
                                                @*<p>If you have more questions, don't hesitate to contact us or send us a tweet  creativetim. We're here to help!</p>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end notice modal -->


                                <h4 class="card-title">List of Leave Application</h4>
                            </div>
                            <div class="card-body">
                                <br />
                                <table id="datatable" class="table table-striped " cellspacing="10" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Employee Name</th>
                                            <th>Leave</th>
                                            <th>Description</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Approved Date</th>
                                            <th>Status</th>
                                            <th class="disabled-sorting text-right">Actions</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Employee Name</th>
                                            <th>Leave</th>
                                            <th>Description</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Approved Date</th>
                                            <th>Status</th>
                                            <th class="disabled-sorting text-right">Actions</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                      @foreach (var item in Model)
                                      {
                                        <tr>
                                          <td>@item.EmployeeDetail.FirstName @item.EmployeeDetail.LastName</td>
                                          <td>@item.LeaveTitle</td>
                                          <td>@item.Description</td>
                                          <td>@item.StartDate.ToString("MMMM dd, yyyy")</td>
                                          <td>@item.EndDate.ToString("MMMM dd, yyyy")</td>
                                          <td>
                                            @if (item.Status == "Approved")
                                            {
                                              @item.ApproveDate.ToString("MMM dd, yyyy")
                                            }else
                                            {
                                              <p>-----</p>
                                            }
                                          </td>
                                          <td>
                                            @if (item.Status == "Pending")
                                            {
                                              <a class="btn btn-sm btn-warning">@item.Status</a>
                                            }
                                            else if (item.Status == "Approved")
                                            {
                                              <a class="btn btn-sm btn-info">@item.Status</a>
                                            }
                                            else if (item.Status == "Disapproved")
                                            {
                                              <a class="btn btn-sm btn-danger">@item.Status</a>
                                            }
                                          </td>
                                          <td class="text-right">
                                            <a href="#" class="btn btn-round btn-warning btn-icon btn-sm edit" id="paidbtn" data-toggle="modal" data-target="#noticeModal"><i class="far fa-calendar-alt"></i></a>
                                            <a href="#" class="btn btn-round btn-danger btn-icon btn-sm remove"><i class="fas fa-times"></i></a>
                                          </td>
                                        </tr>

                                      }
